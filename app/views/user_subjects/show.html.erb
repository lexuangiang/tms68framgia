<section id="service" class = "user-section">
  <div id="mimin" class="dashboard topnav">
    <div class="row">
      <div class="col-md-12 top-20">
        <div class="col-md-12">
          <div class="panel">
            <div class="panel-body">
              <div class="col-md-12">
                <h3 class="animated fadeInLeft"><%= @user_subject.subject.name %></h3>
                <p class="animated fadeInDown">
                </p>
                <p class="animated fadeInLeft">
                  <span id="status"><%= @user_subject.status %></span>
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-12 top-20 padding-0">
            <div class="col-md-8">
              <div class="panel">
                <div class="panel-heading">
                  <h3><%= t "task.task_activity" %></h3>
                </div>
                  <div class="panel-body">
                    <div class="col-md-8">
                      <ul class="list-group">
                        <% @activities.each do |activity| %>
                          <li>
                            <%= render_activity activity %>
                          </li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
              </div>
            </div>
          </div>

          <%= render partial: "task_on_subject", locals: {tasks: @tasks} %>
        </div>
      </div>
    </div>
  </div>
</section>
