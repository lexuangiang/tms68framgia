<h1><%= @supervisor.name %></h1>
<div class="container">
  <h2><%= t "mail.course", name: @course.name %></h2><hr/>
  <% @course.user_courses.each do |user_course| %>
  <div class="row">
    <div class="col-md-6">
      <h3>
        <%= t "mail.user" %>
        <%= link_to user_course.user.name, user_url(user_course.user) %>
      </h3>
      <div class="panel panel-default">
        <div class="panel-heading text-center">
          <h3><%= t "mail.subjects" %></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-12">
              <% user_course.user_subjects.each do |user_subject| %>
                <div class="row">
                  <div class="col-md-7 col-md-offset-1">
                    <h4>
                      <%= t "mail.subject", name: user_subject.subject.name %>
                    </h4>
                    <p>
                      <%= t "mail.content",
                      name: user_subject.subject.description %>
                    </p>
                    <%= t "mail.status", status: user_subject.status %>
                  </div>
                </div>
                <hr>
                <%= link_to t("mail.view_subject"),
                  user_course_user_subject_url(user_course, user_subject),
                  class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
