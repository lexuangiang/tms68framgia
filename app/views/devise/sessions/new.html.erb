<section id="count" class = "login-section">
  <div class="card card-container">
    <%= image_tag "avatar.png", class: "profile-img-card", id: "profile-img" %>
    <p id="profile-name" class="profile-name-card"></p>
    <h2 class="title-name">
      <%= t "login", name: resource_name.to_s.humanize %>
    </h2>
    <%= form_for resource, as: resource_name, url: session_path(resource_name),
      class: "form-signin" do |f| %>
      <span id="reauth-email" class="reauth-email"></span>
      <div>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control",
          id: "inputEmail", placeholder: "Email address", autofocus: true %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off",
          id: "inputPassword", placeholder: "Password",
          class: "form-control" %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div id="remember" class="checkbox">
          <label>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </label>
        </div>
      <% end -%>
      <button class="btn btn-lg btn-primary btn-block btn-signin"
        type="submit"><%= t "login" %></button>
    <% end %>
    <div class="margin-top-fix">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
